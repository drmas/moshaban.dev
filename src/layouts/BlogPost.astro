---
import Layout from './Layout.astro';

export interface Props {
  title: string;
  description?: string;
  publishDate: string;
  tags?: string[];
}

const { title, description, publishDate, tags = [] } = Astro.props;

// More robust date parsing
let formattedDate: string;
try {
  const date = new Date(publishDate);
  // Check if date is valid
  if (isNaN(date.getTime())) {
    throw new Error('Invalid date');
  }
  formattedDate = date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
} catch (error) {
  // Fallback to the original string if parsing fails
  formattedDate = publishDate;
}
---

<Layout title={title} description={description}>
  <div class="container">
    <article class="blog-post">
      <header class="post-header">
        <div class="breadcrumb">
          <a href="/" class="breadcrumb-link">~/blog</a>
          <span class="breadcrumb-separator">/</span>
          <span class="breadcrumb-current">article.md</span>
        </div>
        
        <div class="post-title-section">
          <h1 class="post-title">
            <span class="title-prefix">// </span>
            {title}
          </h1>
        </div>
        
        <div class="post-meta">
          <div class="meta-main">
            <div class="author-info">
              <span class="author-avatar">üë®‚Äçüíª</span>
              <span class="author-name">Mo Shaban</span>
            </div>
            <div class="publish-info">
              <span class="commit-icon">üìÖ</span>
              <time class="post-date" datetime={publishDate}>{formattedDate}</time>
            </div>
          </div>
          
          {tags.length > 0 && (
            <div class="post-tags">
              <span class="tags-label">tags:</span>
              {tags.map(tag => (
                <span class="tag">
                  <span class="tag-symbol">#</span>{tag.toLowerCase().replace(/\s+/g, '-')}
                </span>
              ))}
            </div>
          )}
        </div>
      </header>
      
      <div class="post-content">
        <slot />
      </div>
      
      <footer class="post-footer">
        <div class="footer-content">
          <div class="reading-complete">
            <span class="status-icon">‚úÖ</span>
            <span class="status-text">Article complete</span>
          </div>
          
          <div class="post-actions">
            <button class="action-button">
              <span class="action-icon">üí¨</span>
              <span class="action-text">Discuss</span>
            </button>
            <button class="action-button">
              <span class="action-icon">üîó</span>
              <span class="action-text">Share</span>
            </button>
            <button class="action-button">
              <span class="action-icon">‚≠ê</span>
              <span class="action-text">Star</span>
            </button>
          </div>
        </div>
      </footer>
    </article>
  </div>
</Layout>

<style>
  .blog-post {
    max-width: 75ch;
    margin: 0 auto;
  }

  .post-header {
    margin-bottom: var(--spacing-2xl);
    padding-bottom: var(--spacing-xl);
    border-bottom: 2px solid var(--border-primary);
    position: relative;
  }

  .post-header::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 100px;
    height: 2px;
    background: linear-gradient(90deg, var(--accent-primary), var(--accent-secondary));
  }

  .breadcrumb {
    font-family: var(--font-mono);
    font-size: 0.8rem;
    color: var(--text-muted);
    margin-bottom: var(--spacing-lg);
    display: flex;
    align-items: center;
    gap: var(--spacing-xs);
  }

  .breadcrumb-link {
    color: var(--accent-primary);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .breadcrumb-link:hover {
    color: var(--accent-secondary);
  }

  .breadcrumb-separator {
    color: var(--text-muted);
  }

  .breadcrumb-current {
    color: var(--syntax-string);
  }

  .post-title-section {
    margin-bottom: var(--spacing-lg);
  }

  .post-title {
    font-size: 2.5rem;
    line-height: 1.1;
    margin-bottom: 0;
    background: linear-gradient(135deg, var(--text-bright), var(--accent-primary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    position: relative;
  }

  .title-prefix {
    color: var(--syntax-comment);
    font-family: var(--font-mono);
    font-weight: 400;
  }

  .post-meta {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
    font-family: var(--font-mono);
    font-size: 0.9rem;
  }

  .meta-main {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: var(--spacing-md);
  }

  .author-info, .publish-info {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
  }

  .author-avatar {
    font-size: 1.2rem;
  }

  .author-name {
    color: var(--syntax-function);
    font-weight: 600;
  }

  .commit-icon {
    font-size: 1rem;
  }

  .post-date {
    color: var(--text-secondary);
  }

  .post-tags {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: var(--spacing-sm);
  }

  .tags-label {
    color: var(--syntax-keyword);
    font-weight: 600;
  }

  .tag {
    background: var(--bg-tertiary);
    color: var(--accent-primary);
    padding: 0.3rem 0.6rem;
    border-radius: var(--radius-sm);
    font-size: 0.8rem;
    font-weight: 500;
    border: 1px solid var(--border-primary);
    transition: all 0.2s ease;
    cursor: pointer;
  }

  .tag:hover {
    background: var(--accent-primary);
    color: var(--bg-primary);
    transform: translateY(-1px);
    box-shadow: 0 2px 8px rgba(88, 166, 255, 0.3);
  }

  .tag-symbol {
    color: var(--syntax-operator);
    font-weight: 700;
    margin-right: 0.1rem;
  }

  .post-content {
    font-size: 1.1rem;
    line-height: 1.8;
    color: var(--text-secondary);
  }

  /* Enhanced content styling */
  .post-content :global(h1) {
    color: var(--text-bright);
    font-size: 2rem;
    margin-top: var(--spacing-2xl);
    margin-bottom: var(--spacing-lg);
    position: relative;
  }

  .post-content :global(h1::before) {
    content: '# ';
    color: var(--syntax-keyword);
    font-family: var(--font-mono);
    font-weight: 600;
  }

  .post-content :global(h2) {
    color: var(--syntax-function);
    font-size: 1.6rem;
    margin-top: var(--spacing-xl);
    margin-bottom: var(--spacing-md);
    position: relative;
  }

  .post-content :global(h2::before) {
    content: '## ';
    color: var(--syntax-keyword);
    font-family: var(--font-mono);
    font-weight: 600;
  }

  .post-content :global(h3) {
    color: var(--syntax-string);
    font-size: 1.3rem;
    margin-top: var(--spacing-lg);
    margin-bottom: var(--spacing-sm);
    position: relative;
  }

  .post-content :global(h3::before) {
    content: '### ';
    color: var(--syntax-keyword);
    font-family: var(--font-mono);
    font-weight: 600;
  }

  .post-content :global(p) {
    margin-bottom: var(--spacing-md);
    line-height: 1.8;
  }

  .post-content :global(ul, ol) {
    margin-bottom: var(--spacing-md);
    padding-left: var(--spacing-lg);
  }

  .post-content :global(li) {
    margin-bottom: var(--spacing-sm);
    position: relative;
  }

  .post-content :global(li::marker) {
    color: var(--accent-primary);
  }

  .post-content :global(strong) {
    color: var(--text-bright);
    font-weight: 600;
  }

  .post-content :global(em) {
    color: var(--syntax-string);
    font-style: italic;
  }

  .post-content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-lg);
    margin: var(--spacing-xl) 0;
    border: 1px solid var(--border-primary);
  }

  .post-content :global(pre) {
    position: relative;
    margin: var(--spacing-lg) 0;
  }

  .post-content :global(pre::before) {
    content: '';
    position: absolute;
    top: var(--spacing-sm);
    right: var(--spacing-md);
    width: 8px;
    height: 8px;
    background: var(--accent-success);
    border-radius: 50%;
    box-shadow: 0 0 8px var(--accent-success);
  }

  .post-footer {
    margin-top: var(--spacing-2xl);
    padding-top: var(--spacing-xl);
    border-top: 1px solid var(--border-secondary);
  }

  .footer-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: var(--spacing-lg);
  }

  .reading-complete {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    font-family: var(--font-mono);
    font-size: 0.9rem;
    color: var(--accent-success);
  }

  .status-icon {
    font-size: 1rem;
  }

  .status-text {
    font-weight: 500;
  }

  .post-actions {
    display: flex;
    gap: var(--spacing-md);
  }

  .action-button {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    background: var(--bg-tertiary);
    border: 1px solid var(--border-primary);
    color: var(--text-secondary);
    padding: var(--spacing-sm) var(--spacing-md);
    border-radius: var(--radius-md);
    font-family: var(--font-mono);
    font-size: 0.8rem;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .action-button:hover {
    background: var(--bg-elevated);
    color: var(--text-bright);
    border-color: var(--accent-primary);
    transform: translateY(-1px);
  }

  .action-icon {
    font-size: 1rem;
  }

  .action-text {
    font-weight: 500;
  }

  @media (max-width: 768px) {
    .post-title {
      font-size: 2rem;
    }
    
    .meta-main {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--spacing-sm);
    }
    
    .post-content {
      font-size: 1rem;
      line-height: 1.7;
    }

    .footer-content {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--spacing-md);
    }

    .post-actions {
      flex-wrap: wrap;
      gap: var(--spacing-sm);
    }

    .action-button {
      padding: var(--spacing-xs) var(--spacing-sm);
      font-size: 0.75rem;
    }
  }
</style>